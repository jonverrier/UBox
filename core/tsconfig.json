{
   "compilerOptions": {
      "module": "CommonJS",
      "target": "es6",
      "lib": [ "es6" ],
      "sourceMap": true,
      "jsx": "react",
      "noImplicitAny": true
   },
   "include": [
      "./src/**/*.ts",
      "./test/**/*.ts"
   ],
   "exclude": [
      "node_modules"
   ],
   "awesomeTypescriptLoaderOptions": {
      "useCache": true,
      "useBabel": true
   },
   "strictPropertyInitialization" :  true
}
